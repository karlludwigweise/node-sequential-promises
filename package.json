{
  "name": "@klw/node-sequential-promises",
  "description": "A tiny script to run async functions aka promises one after the other",
  "version": "0.9.1",
  "author": {
    "name": "Karl Ludwig Weise",
    "url": "https://ludwigweise.de"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "yarn build",
    "precommit": "yarn format",
    "preversion": "yarn lint",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karlludwigweise/node-sequential-promises.git"

  "homepage": "https://github.com/karlludwigweise/node-sequential-promises",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.1",
    "prettier": "^3.8.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
